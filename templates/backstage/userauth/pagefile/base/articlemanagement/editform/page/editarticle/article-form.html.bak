        <div class="tab-content">
            <div class="tab-pane active" id="kt_tabs_5_1" role="tabpanel">

                <form class="kt-form kt-form--label-right"
                      action="{% url 'edit-article' %}?title_id={{ article.title_id }}&language=zh_hans"
                      enctype="multipart/form-data" method="post">
                    {% csrf_token %}
                    <div class="kt-portlet__body">
                        <div class="form-group row">
                            <label class="col-form-label col-lg-2 col-sm-12">标题（title）:</label>
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <input type="text" class="form-control" value="{{ article.title_zh_hans }}"
                                       name="title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-2 col-sm-12">简介:</label>
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <div class="form-group">
                                <textarea class="form-control"  rows="3" id="exampleTextarea1"
                                          placeholder="Type notes" name="subtitle">{{ article.subtitle_zh_hans }}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-2 col-sm-12">关键词（keyword）:</label>
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <input type="text" class="form-control" value="{{ article.keyword_zh_hans }}"
                                       name="keyword">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-2 col-sm-12">描述（description_key）:</label>
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <div class="form-group">
                                    <textarea class="form-control" id="description_key2" rows="3"
                                              placeholder="Type notes" name="description_key">{{ article.description_key_zh_hans}}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <!--begin::Portlet-->
                                <div class="kt-portlet">
                                    <div class="kt-portlet__head">
                                        <div class="kt-portlet__head-label">
                                            <h3 class="kt-portlet__head-title">
                                                文章内容
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="kt-portlet__body">

                                        <textarea id="editor1" name="content">{{ article.content_zh_hans|safe }}</textarea>

                                    </div>
                                </div>
                                <!--end::Portlet-->
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-9 ml-lg-auto">
                                <a href="javascript:history.back(-1)" id="kt_notify_btn"
                                   class="btn btn-success">返回</a>
                                <button type="submit" class="btn btn-secondary">修改</button>
                            </div>
                        </div>
                    </div>


                </form>
            </div>

